<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <script src="/js/jquery.js"></script>

    <title>STORE MANAGEMENT</title>
  </head>
  <body>
    <div class="container-fluid header">
      <div class="title1">ERP APPLICATION</div>
      <div class="title2">( STORE MODULE )</div>
      <div class="navmenu">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/store/viewall">View All Products</a></li>
           
          <li>
            <a
              type="button"
              data-bs-toggle="modal"
              data-bs-target="#update_p"
              href=""
              >Update product Qty</a
            >
          </li>
          <li>
            <a
              type="button"
              data-bs-toggle="modal"
              data-bs-target="#issue_p"
              href=""
              >Issue Product</a
            >
          </li>
          <li><a href="/store/indents">Products for Indent</a></li>
        </ul>
      </div>
    </div>

    <!-- Add Product  -->
    <div
      class="modal fade"
      id="add_p"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add Product</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form action="/store/add_product" method="post" autocomplete="off">
              <div class="form-group">
                <label for="p_name">Product Name</label>
                <input
                  type="text"
                  name="p_name"
                  id="p_name"
                  class="form-control"
                />
              </div>
              <div class="form-group">
                <label for="p_description">Product Description</label>
                <input
                  type="text"
                  name="p_description"
                  id="p_description"
                  class="form-control"
                />
              </div>
              <div class="form-group">
                <label for="p_price">Price</label>
                <input
                  type="number"
                  name="p_price"
                  id="p_price"
                  class="form-control"
                />
              </div>
              <div class="form-group">
                <label for="p_qty">Product Quantity</label>
                <input
                  type="text"
                  name="p_qty"
                  id="p_qty"
                  class="form-control"
                />
              </div>
              <div class="form-group">
                <label for="p_min_qty">Product Min Quantity</label>
                <input
                  type="text"
                  name="p_min_qty"
                  id="p_min_qty"
                  class="form-control"
                />
              </div>
              <div class="form-group">
                <label for="p_issue_date">Issue Date</label>
                <input
                  type="date"
                  name="p_issue_date"
                  id="p_issue_date"
                  class="form-control"
                   
                />
                
              </div>

              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >
                  Close
                </button>
                <button type="submit" class="btn btn-primary">
                  Add Product
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!---Issue Product  -->
    <div
      class="modal fade"
      id="issue_p"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Issue Product</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form action="/store/issue_product" method="post" autocomplete="off">
              <div class="form-group">
                <label for="p_id">Enter Product ID</label>
                <input
                  type="text"
                  name="p_id"
                  id="p_id"
                  value=""
                  class="form-control"
                />
                <button type="button" id="find" class="btn btn-primary">
                  Find
                </button>
              </div>

              <div class="form-group">
                <label for="p_name">Product Name</label>
                <input
                  type="text"
                  value=""
                  name="p_name"
                  id="p_name"
                  class="form-control"
                />
              </div>
              <div class="form-group">
                <label for="p_description">Product Description</label>
                <input
                  type="text"
                  value=""
                  name="p_description"
                  id="p_description"
                  class="form-control"
                />
              </div>
              <div class="form-group">
                <label for="p_qty">Product Quantity</label>
                <input
                  type="text"
                  value=""
                  name="p_qty"
                  id="p_qty"
                  class="form-control"
                />
              </div>

              <div class="form-group">
                <label for="p_withdraw_date">Issue Date</label>
                <input
                  type="date"
                  value=""
                  name="p_withdraw_date"
                  id="p_withdraw_date"
                  value="<%= Date.now() %>"
                  class="form-control"
                />
              </div>

              <div class="modal-footer">
                <button type="button" id="clear" class="btn btn-danger">
                  Clear
                </button>
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >
                  Close
                </button>
                <button type="submit" class="btn btn-primary">
                  Issue Product
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

