    <!-- purchase requisition  -->
    <div
      class="modal fade"
      id="create_p_requisition"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Create Purchase Requisition</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form action="/purchase/create_requisition" method="post" autocomplete="off">
              <div class="form-group">
                <div class="form-group">
                <label for="p_issue_date">Requisition Date</label>
                <input
                  type="date"
                  name="r_issue_date"
                  id="p_issue_date"
                  class="form-control"
                   
                />
                
              </div>
                <label for="r_name">Product Name</label>
                <input
                  type="text"
                  name="r_name"
                  id="r_name"
                  class="form-control"
                />
              </div>
              <div class="form-group">
                <label for="r_description">Product Description</label>
                <input
                  type="text"
                  name="r_description"
                  id="r_description"
                  class="form-control"
                />
              </div>
               
              <div class="form-group">
                <label for="r_qty">Product Quantity</label>
                <input
                  type="text"
                  name="r_qty"
                  id="r_qty"
                  class="form-control"
                />
              </div>
               <div class="form-group">
                <label for="r_cost">Estimated Cost</label>
                <input
                  type="text"
                  name="r_cost"
                  id="r_cost"
                  class="form-control"
                />
              </div>
               
              

              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >
                  Close
                </button>
                <button type="submit" class="btn btn-primary">
                  Create Purchase Requisition
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

