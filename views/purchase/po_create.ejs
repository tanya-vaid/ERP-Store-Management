<%- include('../templates/pheader.ejs') %>
<section class="p1">
  <% if (data) { %>
  <div class="container-fluid product_view">
    
    <table class="table table-striped table-bordered">
      <thead>
        <td>ID</td>
        <td>REQUISITION NO.</td>
        <td>NAME</td>
        <td>DESCRIPTION</td>
        <td>QUANTITY</td>
        <td>TOTAL COST</td>
        <td>DATE OF PO</td>
        <td>PARTY NAME</td>
        <td>ACTION</td>
      </thead>
      <% data.forEach(function(dd){ %>

      <form method="post" action="/purchase/create_po"  autocomplete="off"> 
         
        <td><label name="id"><%= dd.id %>  </label></td>
        <td><input type="text" value='<%= dd.r_code %>' name="r_code"></td>
        <td><input type="text" value='<%= dd.r_name %>'  name ="r_name"></td>
        <td><input type="text" value='<%= dd.r_description %>' name="r_description"></td>
        <td><input type="text" value=<%= dd.r_qty %> size="4" name="r_qty"></td>
        <td><input type="text" value=<%= dd.r_cost %> name="r_cost"></td>
        <td><input type="datetime-local" name="r_issue_date"></td>
        <td><input type="text" size=5 name="r_party_name"></td>
        <td>
          <button class="btn btn-success" type="submit" id="" >Create Purchase Order</button>
        </td>
        </form>
      </tr>

      <% }) %>
    </table>
    

     
  </div>

  <% }  %>

</section>

<%- include('../templates/footer.ejs') %>
