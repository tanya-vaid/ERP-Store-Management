<%- include('../templates/pheader.ejs') %>
<section class="p1">
  <% if (data) { %>
  <div class="container-fluid product_view">
    <table class="table table-striped table-bordered">
      <thead>
        <td>ID</td>
        <td>REQUISITION NO.</td>
        <td>NAME</td>
        <td>DESCRIPTION</td>
        <td>COST</td>
        <td>QUANTITY</td>
        <td>DATE OF REQUISITION</td>
        <td>STATUS</td>
      </thead>
      <% data.forEach(function(dd){ %>
      <tr>
        <td><%= dd.id %></td>
        <td><%= dd.r_code %></td>
        <td><%= dd.r_name %></td>
        <td><%= dd.r_description %></td>
        <td><%= dd.r_cost %></td>
        <td><%= dd.r_qty %></td>
         
        <td><%= dd.r_issue_date.toLocaleDateString() %></td>
        <td><%= dd.r_status ? 'Approved ': 'Pending' %></td>
      </tr>

      <% }) %>
    </table>

     
  </div>

  <% }else if (data1){ %>
<div class="container-fluid product_view"> 
<table class="table table-striped table-bordered">
      <thead>
        <td>ID</td>
        <td>REQUISITION NO.</td>
        <td>NAME</td>
        <td>DESCRIPTION</td>
        <td>COST</td>
        <td>QUANTITY</td>
        <td>DATE OF REQUISITION</td>
        <td>STATUS</td>
        <td></td>

      </thead>
      <% data1.forEach(function(dd){ %>
        <% if (!dd.r_status) {  %>
      <tr>
        <td><%= dd.id %></td>
        <td><%= dd.r_code %></td>
        <td><%= dd.r_name %></td>
        <td><%= dd.r_description %></td>
        <td><%= dd.r_cost %></td>
        <td><%= dd.r_qty %></td>
         
        <td><%= dd.r_issue_date.toLocaleDateString() %></td>
        <td><%= dd.r_status ? 'Approved ': 'Pending' %></td>
        <td><a class="btn btn-primary" href="/purchase/approvep/<%= dd.id %>">Approve</a></td>
      </tr>
       <% } %>
      <% }) %>
    </table>
</div>
    <% } %>
</section>

<%- include('../templates/footer.ejs') %>
